# top-most EditorConfig file
# https://editorconfig.org/#file-format-details
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true
insert_final_newline = true

[meson.build]
indent_style = space
indent_size = 4

[*.yml]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
